            "host": ["localhost"],
            "port": "5000",
            "path": ["auth", "password"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"current_password\": \"OldPassword123\",\n  \"new_password\": \"NewPassword456\",\n  \"confirm_password\": \"DifferentPassword789\"\n}"
          }
        },
        "response": []
      },
      {
