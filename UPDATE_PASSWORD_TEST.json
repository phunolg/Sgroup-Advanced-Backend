{
  "collection": {
    "info": {
      "name": "Update Password API Tests",
      "description": "Test cases for the PUT /auth/password endpoint",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Success: Update Password with Valid Credentials",
        "request": {
          "method": "PATCH",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "Cookie",
              "value": "access_token={{access_token}}"
            }
          ],
          "url": {
            "raw": "http://localhost:5000/auth/password",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["auth", "password"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"current_password\": \"OldPassword123\",\n  \"new_password\": \"NewPassword456\",\n  \"confirm_password\": \"NewPassword456\"\n}"
          }
        },
        "response": []
      },
      {
        "name": "Error: Mismatched New and Confirm Password",
